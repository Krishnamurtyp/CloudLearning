<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photos - @ViewBag.PageTitle</title>
    <link rel="stylesheet" href="~/node_modules/bulma/css/bulma.min.css" />
    <link rel="stylesheet" href="~/node_modules/@@fortawesome/fontawesome-free/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>

    <!--Layout-->
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="https://bulma.io">
                <p class="title"><i class="fa fa-images" aria-hidden="true"></i>&nbsp;Photos - @ViewBag.PageTitle</p>
            </a>

            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false"
                data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" asp-controller="App" asp-action="Home">
                    Home
                </a>

                <div class="navbar-item has-dropdown is-hoverable">
                    <a class="navbar-link">
                        More
                    </a>

                    <div class="navbar-dropdown">
                        <a class="navbar-item" asp-controller="App" asp-action="About">
                            About
                        </a>
                        <hr class="navbar-divider">
                        <a class="navbar-item" asp-controller="App" asp-action="Contact">
                            Contact Us
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </nav>

    <!--Layout-->


    @RenderBody()

    @RenderSection("JqueryValidation", false)

</body>

</html>
